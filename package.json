{
  "name": "completionist",
  "version": "1.0.0",
  "description": "A Roblox game built with Rojo",
  "scripts": {
    "build": "rojo build default.project.json -o completionist.rbxlx",
    "serve": "rojo serve",
    "format": "stylua src/",
    "format:check": "stylua --check src/",
    "lint": "selene src/",
    "lint:fix": "selene src/ --display-style=quiet",
    "check": "npm run format:check && npm run lint && npm run build",
    "fix": "npm run format && npm run lint:fix",
    "dev": "concurrently \"npm run serve\" \"npm run lint -- --watch\"",
    "install-packages": "wally install",
    "update-packages": "wally update",
    "docs:build": "moonwave build",
    "docs:serve": "moonwave dev",
    "docs:deploy": "moonwave build && gh-pages -d docs",
    "test": "lune run tests/run-tests.luau"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "gh-pages": "^6.3.0",
    "pre-commit": "^1.2.2"
  },
  "keywords": [
    "roblox",
    "rojo",
    "luau"
  ],
  "author": "Kristian Petras",
  "license": "MIT"
}
