{
    "name": "completionist",
    "version": "1.0.0",
    "description": "A Roblox simulator game with class-based progression, grinding mechanics, and meta-progression through rebirth systems",
    "main": "index.js",
    "scripts": {
        "build": "rbxtsc",
        "watch": "rbxtsc -w",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
        "lint": "biome lint src/",
        "lint:fix": "biome lint --write src/",
        "format": "biome format src/",
        "format:fix": "biome format --write src/",
        "check": "biome check src/",
        "check:fix": "biome check --write src/",
        "audit": "npm audit --audit-level=moderate",
        "audit:fix": "npm audit fix",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kristian-petras/completionist.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/kristian-petras/completionist/issues"
    },
    "homepage": "https://github.com/kristian-petras/completionist#readme",
    "devDependencies": {
        "@biomejs/biome": "^2.2.2",
        "@jest/globals": "^30.0.5",
        "@rbxts/compiler-types": "^3.0.0-types.0",
        "@rbxts/types": "^1.0.877",
        "@types/jest": "^30.0.0",
        "husky": "^9.1.7",
        "jest": "^30.0.5",
        "jest-environment-jsdom": "^30.0.5",
        "lint-staged": "^16.1.5",
        "roblox-ts": "^3.0.0",
        "ts-jest": "^29.4.1",
        "typescript": "^5.9.2"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "biome check --write",
            "npm run test:ci -- --findRelatedTests --passWithNoTests"
        ],
        "*.{json,jsonc}": [
            "biome format --write"
        ]
    }
}
